script/source = "extends Node

const PORT = 55555

const ShipResource = preload(\"res://models/ShipResource.cs\")

# Called when the node enters the scene tree for the first time.
func _ready() -> void:
	loading_overlay.show()
	
	var peer: ENetMultiplayerPeer = ENetMultiplayerPeer.new()
	peer.create_client(\"localhost\", PORT)
	multiplayer.connected_to_server.connect(_on_connected_to_server)
	multiplayer.connection_failed.connect(_on_connection_failure)
	DisplayServer.window_set_title(\"Client\")
		
	multiplayer.multiplayer_peer = peer

func _on_connected_to_server() -> void:
	print(\"client: connected to server\")
	RequestSync.rpc_id(1)
	
	
func _on_peer_connected(_id: int) -> void:
	print(\"server: peer connected\")
	
func _on_connection_failure() -> void:
	printerr(\"connection to server failed\")
	get_tree().quit(1)

@rpc(\"any_peer\", \"call_remote\", \"reliable\")
func RequestSync() -> void: pass

@onready var loading_overlay: PanelContainer = $UI/LoadingOverlay
@onready var loading_desc: Label = $UI/LoadingOverlay/VBoxContainer/Description
@onready var loading_progress: ProgressBar = $UI/LoadingOverlay/VBoxContainer/Progress

@rpc(\"authority\", \"call_remote\", \"reliable\")
func SetSyncProgress(progress: float, desc: String) -> void:
	loading_desc.text = desc
	loading_progress.value = progress
	
@rpc(\"authority\", \"call_remote\", \"reliable\")
func SyncComplete() -> void:
	loading_overlay.queue_free()
	
@onready var server_version_label: Label = $UI/VBoxContainer/Header/HBoxContainer/VBoxLeft/GameVersion
@onready var server_reset_label: Label = $UI/VBoxContainer/Header/HBoxContainer/VBoxLeft/NextReset

@rpc(\"authority\", \"call_remote\", \"reliable\")
func SetServerStatus(version: String, nextReset: String) -> void:
	server_version_label.text = \"SpaceTraders \" + version
	server_reset_label.text = nextReset
	
@onready var username_label: Label = $UI/VBoxContainer/Header/HBoxContainer/VBoxRight/Username
@onready var credits_label: Label = $UI/VBoxContainer/Header/HBoxContainer/VBoxRight/Credits

@rpc(\"authority\", \"call_remote\", \"reliable\")
func SetAgentInfo(agentName: String, credits: int) -> void:
	username_label.text = agentName
	credits_label.text = Format.Currency(credits) + \"â‚¡\"

@rpc(\"authority\", \"call_remote\", \"reliable\")
func ClearShips() -> void:
	print(\"ships cleared\")

@rpc(\"authority\", \"call_remote\", \"reliable\")
func AddShip(data: PackedByteArray) -> void:
	var shipRes: ShipResource = ShipResource.FromBytes(data)
	printt(\"ship added:\", shipRes.Name, shipRes.Registration)
	
"

